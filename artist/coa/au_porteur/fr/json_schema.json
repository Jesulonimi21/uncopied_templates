{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Certificat d'authenticité unique original au porteur json schema",
  "description": "Certificat d'authenticité unique original au porteur json schema (version française)",
  "type": "object",
  "properties": {
    "description": {
      "description": "Description",
      "type": "string"
    },
    "height": {
      "description": "Hauteur",
      "type": "string"
    },
    "width": {
      "description": "Largeur",
      "type": "string"
    },
    "art_medium": {
      "description": "Médium",
      "type": "string"
    },
    "artwork_surface": {
      "description": "Surface",
      "type": "string"
    },
    "date_created": {
      "description": "Date de création",
      "type": "string",
      "format": "date"
    },
    "artist_birth_date": {
      "description": "Date de naissance",
      "type": "string",
      "format": "date"
    },
    "artist_birth_place": {
      "description": "Lieu de naissance",
      "type": "string"
    },
    "digital_assets": {
      "description": "Actifs digitaux",
      "type": "object",
      "properties": {
        "primary_image": {
          "description": "Image principale",
          "type": "string",
          "format": "uuid"
        },
        "picture_back": {
          "description": "Image de dos",
          "type": "string",
          "format": "uuid"
        },
        "picture_front_without_frame": {
          "description": "Image excluant l'encadrement",
          "type": "string",
          "format": "uuid"
        }
      },
      "required": [
        "primary_image"
      ]
    }
  },
  "required": [
    "description",
    "date_created",
    "artist_birth_date",
    "artist_birth_place",
    "digital_assets"
  ]
}