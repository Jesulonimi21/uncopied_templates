{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Certificat d'inventaire muséal 3D json schema",
  "description": "Certificat d'inventaire muséal 3D json schema. Version française",
  "type": "object",
  "properties": {
    "object_type": {
      "description": "Type d'objet",
      "type": "string"
    },
    "artist": {
      "description": "Artiste",
      "type": "string"
    },
    "technique": {
      "description": "Technique",
      "type": "string"
    },
    "inventory_id": {
      "description": "Numéro d'inventaire",
      "type": "string"
    },
    "description": {
      "description": "Description",
      "type": "string"
    },
    "bibliography": {
      "description": "Bibliographie",
      "type": "string"
    },
    "provenance": {
      "description": "Provenance",
      "type": "string"
    },
    "height": {
      "description": "Hauteur",
      "type": "string"
    },
    "width": {
      "description": "Largeur",
      "type": "string"
    },
    "depth": {
      "description": "Profondeur",
      "type": "string"
    },
    "weight": {
      "description": "Poids",
      "type": "string"
    },
    "material": {
      "description": "Matériel",
      "type": "string"
    },
    "timespan_begin": {
      "description": "Date de création (estimation basse)",
      "type": "string",
      "format": "date"
    },
    "timespan_end": {
      "description": "Date de création (estimation haute)",
      "type": "string",
      "format": "date"
    },
    "inventory_date": {
      "description": "Some description about inventory_date field",
      "type": "string",
      "format": "date"
    },
    "digital_assets": {
      "description": "Date d'inventaire",
      "type": "object",
      "properties": {
        "primary_image": {
          "description": "Image principale",
          "type": "string",
          "format": "uuid"
        },
        "picture_front": {
          "description": "Image de face",
          "type": "string",
          "format": "uuid"
        },
        "picture_back": {
          "description": "Image de dos",
          "type": "string",
          "format": "uuid"
        },
        "picture_left": {
          "description": "Image latérale gauche",
          "type": "string",
          "format": "uuid"
        },
        "picture_right": {
          "description": "Image latérale droite",
          "type": "string",
          "format": "uuid"
        },
        "picture_top": {
          "description": "Image du haut",
          "type": "string",
          "format": "uuid"
        },
        "picture_below": {
          "description": "Image du dessous",
          "type": "string",
          "format": "uuid"
        }
      },
      "required": [
        "primary_image"
      ]
    }
  },
  "required": [
    "object_type",
    "artist",
    "inventory_id",
    "description",
    "bibliography",
    "provenance",
    "height",
    "width",
    "inventory_date",
    "digital_assets"
  ]
}