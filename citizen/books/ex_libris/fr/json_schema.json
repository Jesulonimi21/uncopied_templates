{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ex-libris",
  "description": "Un ex-libris ou exlibris (du latin ex libris meis, « faisant partie de mes livres ») est une inscription ou une vignette ajoutée à l'intérieur d'un livre, par laquelle le propriétaire marque nommément sa possession. Version française",
  "type": "object",
  "properties": {
    "description": {
      "description": "Description",
      "type": "string"
    },
    "height": {
      "description": "Hauteur (mm)",
      "type": "string"
    },
    "width": {
      "description": "Largeur (mm)",
      "type": "string"
    },
    "art_medium": {
      "description": "Médium",
      "type": "string"
    },
    "artwork_surface": {
      "description": "Surface",
      "type": "string"
    },
    "date_created": {
      "description": "Date de création",
      "type": "string",
      "format": "date"
    },
    "digital_assets": {
      "description": "Actifs digitaux",
      "type": "object",
      "properties": {
        "primary_image": {
          "description": "Image principale",
          "type": "string",
          "format": "uuid"
        },
        "picture_back": {
          "description": "Image de dos",
          "type": "string",
          "format": "uuid"
        },
        "picture_front_without_frame": {
          "description": "Image excluant l'encadrement",
          "type": "string",
          "format": "uuid"
        }
      },
      "required": [
        "primary_image"
      ]
    }
  },
  "required": [
    "description",
    "height",
    "width",
    "date_created",
    "digital_assets"
  ]
}